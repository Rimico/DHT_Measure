<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ac_ma"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbackground"
        tools:context=".MainActivity">

    <TextView style="@style/MainTextView"
              android:id="@+id/temperature"
              android:text="온도(섭씨, 화씨)"
              android:layout_width="142dp"
              android:layout_height="25dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginRight="8dp"
              android:layout_marginEnd="8dp"
              app:layout_constraintHorizontal_bias="0.758"
              android:layout_marginTop="80dp"
              app:layout_constraintTop_toTopOf="parent"/>
    <TextView style="@style/MainLowTextView"
              android:id="@+id/temperature_display"
              android:text="24°C/97°F"
              android:layout_width="178dp"
              android:layout_height="48dp"
              app:layout_constraintTop_toBottomOf="@+id/temperature" android:layout_marginTop="8dp"
              app:layout_constraintStart_toStartOf="@+id/temperature"
              app:layout_constraintEnd_toEndOf="@+id/temperature" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView style="@style/MainTextView"
              android:id="@+id/humidity"
              android:text="습도(%)"
              android:layout_width="142dp"
              android:layout_height="25dp"
              app:layout_constraintEnd_toEndOf="@+id/temperature_display"
              app:layout_constraintStart_toStartOf="@+id/temperature_display"
              android:layout_marginRight="8dp"
              android:layout_marginEnd="8dp"
              app:layout_constraintHorizontal_bias="0.0"
              android:layout_marginTop="36dp"
              app:layout_constraintTop_toBottomOf="@+id/temperature_display"/>
    <TextView style="@style/MainLowTextView"
              android:id="@+id/humidity_display"
              android:text="40%"
              android:layout_width="178dp"
              android:layout_height="48dp"
              app:layout_constraintEnd_toEndOf="@+id/humidity"
              app:layout_constraintStart_toStartOf="@+id/humidity"
              android:layout_marginRight="8dp"
              android:layout_marginEnd="8dp"
              app:layout_constraintHorizontal_bias="0.0"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/humidity"/>
    <TextView style="@style/MainTextView"
              android:id="@+id/dust"
              android:text="미세먼지 수치"
              android:layout_width="142dp"
              android:layout_height="25dp"
              app:layout_constraintStart_toStartOf="@+id/humidity_display"
              app:layout_constraintTop_toBottomOf="@+id/humidity_display"
              android:layout_marginTop="28dp" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="@+id/humidity_display"
              android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView style="@style/MainLowTextView"
              android:id="@+id/dust_display"
              android:text="81"
              android:layout_width="178dp"
              android:layout_height="48dp"
              app:layout_constraintEnd_toEndOf="@+id/dust"
              app:layout_constraintStart_toStartOf="@+id/dust"
              app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/dust"/>
    <TextView style="@style/MainTextView"
              android:id="@+id/PM"
              android:text="미세먼지 상태"
              android:layout_width="142dp"
              android:layout_height="25dp"
              app:layout_constraintStart_toStartOf="@+id/dust_display"
              app:layout_constraintTop_toBottomOf="@+id/dust_display"
              android:layout_marginTop="36dp"
              app:layout_constraintEnd_toEndOf="@+id/dust_display" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView style="@style/MainLowTextView"
              android:id="@+id/textView5"
              android:text="보통"
              android:layout_width="178dp"
              android:layout_height="48dp"
              app:layout_constraintEnd_toEndOf="@+id/PM"
              app:layout_constraintStart_toStartOf="@+id/PM"
              android:layout_marginRight="8dp"
              android:layout_marginEnd="8dp"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintTop_toBottomOf="@+id/PM"
              android:layout_marginTop="8dp"/>
    <Button style="@style/BView"
            android:id="@+id/At_Nat"
            android:text="자동"
            android:layout_width="85dp"
            android:layout_height="62dp"
            android:layout_marginLeft="176dp"
            android:layout_marginStart="176dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.859" android:layout_marginTop="556dp"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>